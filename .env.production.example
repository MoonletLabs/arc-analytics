# USDC/EURC Analytics - Production Environment Variables
# ======================================================
# Copy this file to .env.production and fill in your values

# Database
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_DB=usdc_eurc_analytics

# Optional: Docker Registry (leave empty for local images)
# REGISTRY=your-registry.com/

# Image tag
TAG=latest

# Web port
WEB_PORT=80

# Indexer Configuration
INDEXER_POLL_INTERVAL_MS=12000
INDEXER_BATCH_SIZE=1000
INDEXER_SYNC_DAYS=7

# RPC Endpoints (REQUIRED - get from Alchemy, Infura, dRPC, etc.)
RPC_ETHEREUM_SEPOLIA=https://eth-sepolia.g.alchemy.com/v2/YOUR_KEY
RPC_ARBITRUM_SEPOLIA=https://arb-sepolia.g.alchemy.com/v2/YOUR_KEY
RPC_BASE_SEPOLIA=https://base-sepolia.g.alchemy.com/v2/YOUR_KEY
RPC_POLYGON_AMOY=https://polygon-amoy.g.alchemy.com/v2/YOUR_KEY
RPC_AVALANCHE_FUJI=https://api.avax-test.network/ext/bc/C/rpc
RPC_OPTIMISM_SEPOLIA=https://opt-sepolia.g.alchemy.com/v2/YOUR_KEY

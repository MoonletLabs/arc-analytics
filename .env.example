# Database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/usdc_eurc_analytics

# RPC Endpoints (Testnet)
# Get free endpoints from drpc.org, alchemy.com, or infura.io
RPC_ARC_TESTNET=
RPC_ETHEREUM_SEPOLIA=
RPC_ARBITRUM_SEPOLIA=
RPC_BASE_SEPOLIA=
RPC_POLYGON_AMOY=
RPC_AVALANCHE_FUJI=

# API
API_PORT=3001

# Indexer
INDEXER_POLL_INTERVAL_MS=5000
INDEXER_BATCH_SIZE=100
# Number of days to sync on first run (0 = sync from latest block only)
INDEXER_SYNC_DAYS=7

# Feature Flags
ENABLE_ARC_NATIVE=true
ENABLE_USYC=true
ENABLE_STABLEFX=true

# Disable indexer to use dummy data mode (for demo/testing)
INDEXER_DISABLED=true

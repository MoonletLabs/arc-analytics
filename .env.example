# Database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/arc_analytics

# Redis (for BullMQ)
REDIS_URL=redis://localhost:6379

# RPC Endpoints (Testnet)
# Arc uses public RPC by default, but you can override
RPC_ARC_TESTNET=
RPC_ETHEREUM_SEPOLIA=
RPC_ARBITRUM_SEPOLIA=
RPC_BASE_SEPOLIA=

# API
API_PORT=3001

# Indexer
INDEXER_POLL_INTERVAL_MS=12000
INDEXER_BATCH_SIZE=1000
# Number of days to sync on first run (0 = sync from latest block only)
INDEXER_SYNC_DAYS=7

# Feature Flags
ENABLE_ARC_NATIVE=true
ENABLE_USYC=true
ENABLE_STABLEFX=true

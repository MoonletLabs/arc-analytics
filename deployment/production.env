# Image Configuration
API_IMAGE=ghcr.io/moonletlabs/arc-analytics-api:latest
INDEXER_IMAGE=ghcr.io/moonletlabs/arc-analytics-indexer:latest
WEB_IMAGE=ghcr.io/moonletlabs/arc-analytics-web:latest

# Database Configuration
# ARC_ANALYTICS_POSTGRES_PASSWORD is injected from GitHub Secrets during deployment
POSTGRES_USER=postgres
ARC_ANALYTICS_POSTGRES_PASSWORD=
POSTGRES_DB=usdc_eurc_analytics

# Web Configuration
WEB_PORT=80

# Indexer Configuration
INDEXER_POLL_INTERVAL_MS=12000
INDEXER_BATCH_SIZE=1000
INDEXER_SYNC_DAYS=7

# RPC URLs - REQUIRED
# Update these with your actual RPC URLs
RPC_ETHEREUM_SEPOLIA=https://your-ethereum-sepolia-rpc-url
RPC_ARBITRUM_SEPOLIA=https://your-arbitrum-sepolia-rpc-url
RPC_BASE_SEPOLIA=https://your-base-sepolia-rpc-url
RPC_POLYGON_AMOY=https://your-polygon-amoy-rpc-url
RPC_AVALANCHE_FUJI=https://your-avalanche-fuji-rpc-url
RPC_OPTIMISM_SEPOLIA=https://your-optimism-sepolia-rpc-url
